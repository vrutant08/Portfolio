{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build && cd ../server && npm install && npm run build",
  "outputDirectory": "client/dist",
  "builds": [
    {
      "src": "client/dist/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "server/dist/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/dist/**", "shared/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/dist/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CLIENT_URL": "https://portfolio-d7evy3u6x-vrutants-projects-4e165f5a.vercel.app"
  }
}
