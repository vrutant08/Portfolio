{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd client && npm install --production=false && npm run build"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd server && npm install --production=false && npm run build",
        "includeFiles": ["server/**", "shared/**"]
      }
    }
  ],  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "client/dist/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
